<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="instructorForm" prefHeight="645.0" prefWidth="1010.0" style="-fx-background-color: #dfe6e9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.InstructorFormController">

    <!-- Header -->
    <Label layoutX="113.0" layoutY="46.0" style="-fx-font-weight: bold;">
        <font>
            <Font name="DejaVu Serif Condensed Bold" size="30.0" />
        </font>
    </Label>

    <!-- Input Fields -->
    <Label layoutX="57.0" layoutY="142.0" prefHeight="25.0" prefWidth="141.0" style="-fx-font-weight: bold;" text="Instructor ID      :">
      <font>
         <Font name="System Bold" size="16.0" />
      </font></Label>
    <TextField fx:id="txtInstructorId" layoutX="198.0" layoutY="142.0" prefHeight="25.0" prefWidth="404.0">
      <font>
         <Font size="14.0" />
      </font></TextField>

    <Label layoutX="57.0" layoutY="199.0" prefHeight="25.0" prefWidth="141.0" style="-fx-font-weight: bold;" text="Name                 :">
      <font>
         <Font size="16.0" />
      </font></Label>
    <TextField fx:id="txtName" layoutX="198.0" layoutY="199.0" prefHeight="25.0" prefWidth="404.0">
      <font>
         <Font size="14.0" />
      </font></TextField>

    <Label layoutX="57.0" layoutY="252.0" prefHeight="25.0" prefWidth="141.0" style="-fx-font-weight: bold;" text="Specialization    :">
      <font>
         <Font size="16.0" />
      </font></Label>
    <TextField fx:id="txtSpecialization" layoutX="198.0" layoutY="252.0" prefHeight="25.0" prefWidth="404.0">
      <font>
         <Font size="14.0" />
      </font></TextField>

    <!-- Table -->
    <TableView fx:id="tblInstructor" layoutX="64.0" layoutY="401.0" onMouseClicked="#tblInstructorOnClickAction" prefHeight="200.0" prefWidth="966.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="160.0000228881836" text="ID" />
            <TableColumn fx:id="colName" prefWidth="443.3333435058594" text="Name" />
            <TableColumn fx:id="colSpecialization" prefWidth="375.33333333333337" text="Specialization" />
        </columns>
    </TableView>

    <!-- Buttons without fx:id -->
    <HBox layoutX="279.0" layoutY="337.0" spacing="20.0">
        <children>
            <Button onAction="#btnSaveOnAction" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #1F45FC; -fx-text-fill: white;" text="💾 Save">
            <font>
               <Font name="System Bold" size="15.0" />
            </font></Button>
            <Button onAction="#btnDeleteOnAction" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #1F45FC; -fx-text-fill: white;" text=" 🗑  Delete">
            <font>
               <Font name="System Bold" size="15.0" />
            </font></Button>
            <Button onAction="#btnUpdateOnAction" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #1F45FC; -fx-text-fill: white;" text="🔄 Update">
            <font>
               <Font name="System Bold" size="15.0" />
            </font></Button>
            <Button onAction="#btnClearOnAction" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #1F45FC; -fx-text-fill: white;" text="🔁 Reset">
            <font>
               <Font name="System Bold" size="15.0" />
            </font></Button>
        </children>
    </HBox>
   <TextField fx:id="txtSearch" layoutX="765.0" layoutY="74.0" onKeyReleased="#txtSearchKeyReleased" prefWidth="250.0" promptText="Search by Name or ID                 🔍" style="-fx-background-radius: 15;                               -fx-border-radius: 15;                               -fx-border-color: #468A9A;                               -fx-border-width: 2;                               -fx-padding: 5 10 5 10;                               -fx-font-size: 14;                               -fx-prompt-text-fill: #888;">
      <padding>
         <Insets right="100.0" />
      </padding>
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
   </TextField>
   <Label alignment="CENTER" contentDisplay="CENTER" layoutX="-5.0" prefHeight="45.0" prefWidth="1150.0" style="-fx-background-color: #1e3799;" text="Instructor Manage" textFill="WHITE">
      <font>
         <Font name="System Bold" size="23.0" />
      </font>
   </Label>

</AnchorPane>
