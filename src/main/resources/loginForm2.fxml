<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dashboardForm" prefHeight="640.0" prefWidth="1060.0" style="-fx-background-color: #dfe6e9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.Dashboard2Controller">

    <children>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="30.0" spacing="10" />

        <!-- Summary Cards -->
        <HBox layoutX="210.0" layoutY="140.0" prefHeight="90.0" prefWidth="711.0" spacing="25">
            <children>

                <!-- Total Student -->
                <Pane prefHeight="92.0" prefWidth="220.0" style="-fx-background-color: linear-gradient(to bottom, #17285c, #3888fd); -fx-background-radius: 50;">
                    <effect><DropShadow color="rgba(0,0,0,0.3)" radius="10" /></effect>
                    <children>
                        <Label layoutX="40.0" layoutY="15.0" text="Total Students" textFill="WHITE">
                            <font><Font name="System Bold" size="20.0" /></font>
                        </Label>
                        <Label fx:id="lblTotalStudent" layoutX="86.0" layoutY="50.0" prefWidth="48.0" style="-fx-alignment: center;" text="0" textFill="WHITE">
                            <font><Font name="System Bold" size="26.0" /></font>
                        </Label>
                    </children>
                </Pane>

                <!-- Total Course -->
                <Pane prefHeight="92.0" prefWidth="220.0" style="-fx-background-color: linear-gradient(to bottom, #17285c, #3888fd); -fx-background-radius: 50;">
                    <effect><DropShadow color="rgba(0,0,0,0.3)" radius="10" /></effect>
                    <children>
                        <Label layoutX="50.0" layoutY="15.0" text="Total Courses" textFill="WHITE">
                            <font><Font name="System Bold" size="20.0" /></font>
                        </Label>
                        <Label fx:id="lblTotalPrograms" layoutX="86.0" layoutY="50.0" prefWidth="48.0" style="-fx-alignment: center;" text="0" textFill="WHITE">
                            <font><Font name="System Bold" size="26.0" /></font>
                        </Label>
                    </children>
                </Pane>

                <!-- Total Instructor -->
                <Pane prefHeight="92.0" prefWidth="220.0" style="-fx-background-color: linear-gradient(to bottom, #17285c, #3888fd); -fx-background-radius: 50;">
                    <effect><DropShadow color="rgba(0,0,0,0.3)" radius="10" /></effect>
                    <children>
                        <Label layoutX="30.0" layoutY="15.0" text="Total Instructors" textFill="WHITE">
                            <font><Font name="System Bold" size="20.0" /></font>
                        </Label>
                        <Label fx:id="lblTotalInstructor" layoutX="86.0" layoutY="50.0" prefWidth="48.0" style="-fx-alignment: center;" text="0" textFill="WHITE">
                            <font><Font name="System Bold" size="26.0" /></font>
                        </Label>
                    </children>
                </Pane>

            </children>
        </HBox>

        <!-- Bar Chart + Table in VBox -->
        <VBox layoutX="140.0" layoutY="304.0" prefHeight="267.0" prefWidth="338.0" spacing="20">
         <children>
      
                      <BarChart fx:id="BarChartStu" prefHeight="334.0" prefWidth="338.0">
                    <xAxis>
                  <CategoryAxis side="BOTTOM" />
               </xAxis>
                    <yAxis>
                  <NumberAxis side="LEFT" />
               </yAxis>
                </BarChart>
         </children>
        </VBox>

        <!-- Monthly Income -->
        <HBox alignment="CENTER_LEFT" layoutX="400.0" layoutY="580.0" spacing="10" />
          <Label layoutX="594.0" layoutY="505.0" text="Monthly Income :" textFill="#17285c">
              <font>
            <Font name="System Bold" size="20.0" />
         </font>
          </Label>
          <Label fx:id="lblIncom" layoutX="775.0" layoutY="505.0" text="0" textFill="RED">
              <font>
            <Font name="System Bold" size="24.0" />
         </font>
          </Label>
          <Label layoutX="111.0" layoutY="61.0" style="-fx-text-fill: #17285c;">
              <font>
                  <Font name="DejaVu Serif Condensed Bold" size="30.0" />
              </font>
          </Label>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="45.0" prefWidth="1060.0" style="-fx-background-color: #1e3799;" text="Dashboard" textFill="WHITE">
         <font>
            <Font name="System Bold" size="23.0" />
         </font>
      </Label>

    </children>
</AnchorPane>
