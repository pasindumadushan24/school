<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="studentForm" prefHeight="640.0" prefWidth="1010.0" style="-fx-background-color: #dfe6e9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.StudentFormController">

   <children>
      <!-- Title -->
      <Label layoutX="31.0" layoutY="52.0">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>

      <!-- Input Fields -->
      <VBox layoutX="57.0" layoutY="120.0" spacing="15.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label prefHeight="25.0" prefWidth="155.0" style="-fx-font-weight: bold;" text="Student ID               :">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
                  <TextField fx:id="txtId" onAction="#txtIdOnAction" prefHeight="31.0" prefWidth="574.0" promptText="Sxxx" style="-fx-background-color: #fff; -fx-border-color: #7367F0; -fx-border-width: 0 0 1px 0; -fx-background-radius: 10;">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>

            <HBox spacing="10.0">
               <children>
                  <Label prefHeight="25.0" prefWidth="155.0" style="-fx-font-weight: bold;" text="Name                       :">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
                  <TextField fx:id="txtName" onAction="#txtNameOnAction" prefHeight="31.0" prefWidth="573.0" promptText="xxxx" style="-fx-background-color: #fff; -fx-border-color: #7367F0; -fx-border-width: 0 0 1px 0; -fx-background-radius: 10;">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>

            <HBox spacing="10.0">
               <children>
                  <Label prefHeight="25.0" prefWidth="155.0" style="-fx-font-weight: bold;" text="Address                   :">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
                  <TextField fx:id="txtAddress" onAction="#txtAddressOnAction" prefHeight="31.0" prefWidth="575.0" promptText="No.xxxx" style="-fx-background-color: #fff; -fx-border-color: #7367F0; -fx-border-width: 0 0 1px 0; -fx-background-radius: 10;">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>

            <HBox spacing="10.0">
               <children>
                  <Label prefHeight="25.0" prefWidth="155.0" style="-fx-font-weight: bold;" text="Phone No                :">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
                  <TextField fx:id="txtTel" prefHeight="31.0" prefWidth="575.0" promptText="07xxxxxxxx" style="-fx-background-color: #fff; -fx-border-color: #7367F0; -fx-border-width: 0 0 1px 0; -fx-background-radius: 10;">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
         </children>
      </VBox>

      <!-- Buttons -->
      <HBox layoutX="207.0" layoutY="360.0" spacing="20.0" />

      <!-- Search Box -->
      <HBox layoutX="520.0" layoutY="46.0" spacing="10.0" />

      <!-- Table -->
      <TableView fx:id="tblStudent" layoutX="40.0" layoutY="420.0" onMouseClicked="#tblStudentOnClickAction" prefHeight="180.0" prefWidth="963.0" style="-fx-background-radius: 10;">
         <columns>
            <TableColumn fx:id="colId" prefWidth="91.33333969116211" text="ID" />
            <TableColumn fx:id="colName" prefWidth="267.3332824707031" text="Name" />
            <TableColumn fx:id="colAddress" prefWidth="273.9999694824219" text="Address" />
            <TableColumn fx:id="colTel" prefWidth="150.0" text="Phone No" />
            <TableColumn fx:id="colRegisterDate" prefWidth="178.6666259765625" text="Register Date" />
         </columns>
      </TableView>

      <DatePicker fx:id="registerDatePicker" layoutX="221.0" layoutY="306.0" prefHeight="31.0" prefWidth="605.0" promptText="xxxx/xx/xx" style="-fx-background-radius: 10;" />
      <Label layoutX="57.0" layoutY="306.0" prefHeight="25.0" prefWidth="164.0" style="-fx-font-weight: bold;" text="Registration Date   :">
         <font>
            <Font size="16.0" />
         </font></Label>
      <TextField fx:id="txtSearch" layoutX="753.0" layoutY="57.0" onKeyReleased="#txtSearchKeyReleased" prefWidth="250.0" promptText="Search by Student ID                  🔍" style="-fx-background-radius: 15;                               -fx-border-radius: 15;                               -fx-border-color: #468A9A;                               -fx-border-width: 2;                               -fx-padding: 5 10 5 10;                               -fx-font-size: 14;                               -fx-prompt-text-fill: #888;">
         <padding>
            <Insets right="100.0" />
         </padding>
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </TextField>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="-1.0" prefHeight="45.0" prefWidth="1150.0" style="-fx-background-color: #1e3799;" text="Student Manage" textFill="WHITE">
         <font>
            <Font name="System Bold" size="23.0" />
         </font>
      </Label>

      <Button layoutX="704.0" layoutY="356.0" onAction="#btnClearOnAction" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #1F45FC; -fx-text-fill: white; -fx-background-radius: 10;" text="🔁 Reset">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>

      <Button layoutX="545.0" layoutY="356.0" onAction="#btnUpdateOnAction" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #1F45FC; -fx-text-fill: white; -fx-background-radius: 10;" text="🔄 Update">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>

      <Button layoutX="390.0" layoutY="356.0" onAction="#btnDeleteOnAction" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #1F45FC; -fx-text-fill: white; -fx-background-radius: 10;" text=" 🗑  Delete">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button layoutX="239.0" layoutY="356.0" onAction="#btnSaveOnAction" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #1F45FC; -fx-text-fill: white; -fx-background-radius: 10;" text=" 💾  Save">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>

   </children>
</AnchorPane>
